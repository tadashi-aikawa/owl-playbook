{
  // -------------------------------------
  // 見た目
  // -------------------------------------
  "editor.fontFamily": "SauceCodePro NF",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Default High Contrast",
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#3fd6fc79",
    "editor.selectionHighlightBackground": "#3fd6fc79"
  },
  "window.title": "${dirty}${activeEditorMedium} [${rootName}]",
  "window.zoomLevel": 0,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": true,
  "breadcrumbs.enabled": true,
  "terminal.integrated.fontFamily": "SauceCodePro NF",
  "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": true,
  // -------------------------------------
  // 挙動
  // -------------------------------------
  "editor.tabCompletion": "on",
  "editor.snippetSuggestions": "top",
  "editor.formatOnSave": true,
  // -------------------------------------
  // デフォルトファイル設定
  // -------------------------------------
  "files.eol": "\n",
  // -------------------------------------
  // ファイルごとの特殊設定
  // -------------------------------------
  "[plaintext]": {
    "files.autoGuessEncoding": true
  },
  "[csv]": {
    "files.autoGuessEncoding": true
  },
  "[tsv]": {
    "files.autoGuessEncoding": true
  },
  "[bat]": {
    "files.encoding": "shiftjis"
  },
  "files.associations": {
    "Vagrantfile": "ruby"
  },
  // -------------------------------------
  // ターミナル
  // -------------------------------------
  "editWithShell.shell.windows": "bash",
  "editWithShell.shellArgs.windows": ["-c"],
  "editWithShell.processEntireTextIfNoneSelected": true,
  // -------------------------------------
  // Vim
  // -------------------------------------
  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.visualstar": true,
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "rgba(0, 0, 0, 0.7)",
  "vim.easymotionMarkerForegroundColorOneChar": "pink",
  "vim.easymotionMarkerWidthPerChar": 12,
  "vim.easymotionMarkerHeight": 24,
  "vim.easymotionMarkerFontSize": "24",
  "vim.easymotionMarkerYOffset": 5,
  "vim.enableNeovim": true,
  // "vim.neovimPath": "C:\\Users\\syoum\\scoop\\shims\\nvim.exe",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-k>"],
      "after": ["g", "b"]
    },
    {
      "before": ["<C-o>"],
      "commands": [
        {
          "command": "workbench.action.navigateBack"
        }
      ]
    },
    {
      "before": ["<C-i>"],
      "commands": [
        {
          "command": "workbench.action.navigateForward"
        }
      ]
    },
    {
      "before": ["s"],
      "after": ["<leader>", "<leader>", "2", "s", "<char>", "<char>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<C-k>"],
      "after": ["g", "b"]
    }
  ],
  "vim.disableExtension": false,
  // -------------------------------------
  // revealjs
  // -------------------------------------
  "revealjs.highlightTheme": "",
  "revealjs.browserPath": "",
  "revealjs.transition": "convex",
  "revealjs.exportHTMLPath": "",
  // -------------------------------------
  // VS Notes
  // -------------------------------------
  "vsnotes.defaultNotePath": "~\\backup\\notes",
  // -------------------------------------
  // JS/TS
  // -------------------------------------
  "prettier.disableLanguages": ["markdown", "yaml"],
  "eslint.validate": ["javascript", "typescript"],
  // -------------------------------------
  // Markdown
  // -------------------------------------
  "markdownlint.config": {
    "MD003": false,
    "MD012": false,
    "MD024": false,
    "MD026": false,
    "MD033": false,
    "MD034": false,
    "MD040": false,
    "MD041": false,
    "MD045": false
  },
  // -------------------------------------
  // REST Client
  // -------------------------------------
  "rest-client.decodeEscapedUnicodeCharacters": true,
  "rest-client.enableTelemetry": false,
  "rest-client.previewResponsePanelTakeFocus": false,
  "rest-client.previewOption": "exchange",
  "rest-client.environmentVariables": {
    "$shared": {
      "togglApiToken": "TOGGL_API_TOKEN"
    },
    "local": {
      "restjcBaseUrl": "REST_JC_DEVELOPMENT_BASE_URL"
    },
    "production": {
      "restjcBaseUrl": "REST_JC_PRODUCTION_BASE_URL",
      "github": "https://api.github.com"
    }
  },
  // -------------------------------------
  // その他
  // -------------------------------------
  "terminal.integrated.rendererType": "dom",
  "explorer.confirmDelete": false,
  "editor.cursorSurroundingLines": 5,
  "editor.formatOnPaste": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "git.autofetch": true,
  "git.ignoreLegacyWarning": true,
  "go.useLanguageServer": true,
  "C_Cpp.intelliSenseEngine": "Tag Parser",
  "explorer.confirmDragAndDrop": false,
  "git.enableSmartCommit": true,
  "pasteImage.path": "${currentFileDir}/images",
  "python.formatting.provider": "black",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
  // "extensions.autoUpdate": false,
}
