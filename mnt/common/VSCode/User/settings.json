{
  // -------------------------------------
  // 見た目
  // -------------------------------------
  "editor.fontSize": 16,
  "editor.fontFamily": "Source Code Pro for Powerline",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Monokai",
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#3fd6fc79",
    "editor.selectionHighlightBackground": "#3fd6fc79"
  },
  "window.title": "${dirty}${activeEditorMedium} [${rootName}]",
  "window.zoomLevel": 0,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": true,
  "breadcrumbs.enabled": true,
  "terminal.integrated.fontFamily": "Source Code Pro for Powerline",
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": true,
  // -------------------------------------
  // 挙動
  // -------------------------------------
  "editor.tabCompletion": "on",
  "editor.snippetSuggestions": "top",
  "editor.formatOnSave": true,
  // -------------------------------------
  // デフォルトファイル設定
  // -------------------------------------
  "files.eol": "\n",
  // -------------------------------------
  // ファイルごとの特殊設定
  // -------------------------------------
  "[plaintext]": {
    "files.autoGuessEncoding": true
  },
  "files.associations": {
    "Vagrantfile": "ruby"
  },
  "[bat]": {
    "files.encoding": "shiftjis"
  },
  // -------------------------------------
  // ターミナル
  // -------------------------------------
  "editWithShell.shell.windows": "bash",
  "editWithShell.shellArgs.windows": [
    "-c"
  ],
  "editWithShell.processEntireTextIfNoneSelected": true,
  // -------------------------------------
  // Vim
  // -------------------------------------
  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.visualstar": true,
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "rgba(0, 0, 0, 0.7)",
  "vim.easymotionMarkerForegroundColorOneChar": "pink",
  "vim.easymotionMarkerWidthPerChar": 12,
  "vim.easymotionMarkerHeight": 24,
  "vim.easymotionMarkerFontSize": "24",
  "vim.easymotionMarkerYOffset": 5,
  "vim.enableNeovim": true,
  "vim.neovimPath": "C:\\tools\\neovim\\Neovim\\bin\\nvim.exe",
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "<C-k>"
      ],
      "after": [
        "g",
        "b"
      ]
    },
    {
      "before": [
        "<C-o>"
      ],
      "commands": [
        {
          "command": "workbench.action.navigateBack"
        }
      ]
    },
    {
      "before": [
        "<C-i>"
      ],
      "commands": [
        {
          "command": "workbench.action.navigateForward"
        }
      ]
    },
    {
      "before": [
        "s"
      ],
      "after": [
        "<leader>",
        "<leader>",
        "2",
        "s",
        "<char>",
        "<char>"
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [
        "<C-k>"
      ],
      "after": [
        "g",
        "b"
      ]
    }
  ],
  "vim.disableExtension": false,
  // -------------------------------------
  // revealjs
  // -------------------------------------
  "revealjs.highlightTheme": "",
  "revealjs.browserPath": "",
  "revealjs.transition": "convex",
  "revealjs.exportHTMLPath": "",
  // -------------------------------------
  // VS Notes
  // -------------------------------------
  "vsnotes.defaultNotePath": "~\\backup\\notes",
  // -------------------------------------
  // JS/TS
  // -------------------------------------
  "prettier.disableLanguages": [
    "markdown"
  ],
  // -------------------------------------
  // Markdown
  // -------------------------------------
  "markdownlint.config": {
    "MD003": false,
    "MD034": false
  },
  // -------------------------------------
  // REST Client
  // -------------------------------------
  "rest-client.decodeEscapedUnicodeCharacters": true,
  "rest-client.enableTelemetry": false,
  "rest-client.previewResponsePanelTakeFocus": false,
  "rest-client.previewOption": "exchange",
  "rest-client.environmentVariables": {
    "$shared": {
      "version": "v1"
    },
    "local": {
      "version": "v2",
      "host": "localhost",
      "token": "test token",
      "secretKey": "USERNAME"
    },
    "production": {
      "host": "example.com",
      "token": "product token",
      "secretKey": "prodSecret"
    }
  },
  // -------------------------------------
  // その他
  // -------------------------------------
  "terminal.integrated.rendererType": "dom",
  "explorer.confirmDelete": false,
  "editor.formatOnPaste": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "git.autofetch": true,
  "git.ignoreLegacyWarning": true,
  "go.useLanguageServer": true,
  "C_Cpp.intelliSenseEngine": "Tag Parser",
  "explorer.confirmDragAndDrop": false
}