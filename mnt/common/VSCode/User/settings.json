{
  // -------------------------------------
  // 見た目
  // -------------------------------------
  "editor.fontFamily": "SauceCodePro NF",
  "editor.fontSize": 18,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "window.title": "${dirty}${activeEditorMedium} [${rootName}]",
  "window.zoomLevel": 0,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": true,
  "breadcrumbs.enabled": true,
  "terminal.integrated.fontFamily": "SauceCodePro NF",
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": true,
  // -------------------------------------
  // 挙動
  // -------------------------------------
  "editor.tabCompletion": "on",
  "editor.snippetSuggestions": "top",
  "editor.formatOnSave": true,
  // -------------------------------------
  // デフォルトファイル設定
  // -------------------------------------
  "files.eol": "\n",
  // -------------------------------------
  // ファイルごとの特殊設定
  // -------------------------------------
  "[plaintext]": {
    "files.autoGuessEncoding": true
  },
  "[csv]": {
    "files.autoGuessEncoding": true
  },
  "[tsv]": {
    "files.autoGuessEncoding": true
  },
  "[bat]": {
    "files.encoding": "shiftjis"
  },
  "files.associations": {
    "Vagrantfile": "ruby"
  },
  // -------------------------------------
  // ターミナル
  // -------------------------------------
  "editWithShell.shell.windows": "bash",
  "editWithShell.shellArgs.windows": ["-c"],
  "editWithShell.processEntireTextIfNoneSelected": true,
  // -------------------------------------
  // Vim
  // -------------------------------------
  "vim.enableNeovim": true,
  "vim.statusBarColorControl": false,

  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.visualstar": true,
  "vim.searchHighlightColor": "#070",
  "vim.camelCaseMotion.enable": true,
  "vim.highlightedyank.enable": true,
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "rgba(0, 0, 0, 0.5)",
  "vim.easymotionMarkerForegroundColorOneChar": "lime",
  "vim.replaceWithRegister": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["]"],
      "after": ["<leader>"]
    },
    {
      "before": ["<C-k>"],
      "after": ["g", "b"]
    },
    {
      "before": ["_"],
      "after": ["g", "r"]
    },
    {
      "before": ["<C-o>"],
      "commands": [
        {
          "command": "workbench.action.navigateBack"
        }
      ]
    },
    {
      "before": ["<C-i>"],
      "commands": [
        {
          "command": "workbench.action.navigateForward"
        }
      ]
    },
    {
      "before": ["s"],
      "after": ["<leader>", "<leader>", "2", "s", "<char>", "<char>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["]"],
      "after": ["<leader>"]
    },
    {
      "before": ["<C-k>"],
      "after": ["g", "b"]
    },
    {
      "before": ["_"],
      "after": ["g", "r"]
    }
  ],
  "vim.disableExtension": false,
  // -------------------------------------
  // revealjs
  // -------------------------------------
  "revealjs.highlightTheme": "",
  "revealjs.browserPath": "",
  "revealjs.transition": "convex",
  "revealjs.exportHTMLPath": "",
  // -------------------------------------
  // VS Notes
  // -------------------------------------
  "vsnotes.defaultNotePath": "~\\backup\\notes",
  // -------------------------------------
  // JS/TS
  // -------------------------------------
  "eslint.validate": ["javascript", "typescript"],
  // -------------------------------------
  // Markdown
  // -------------------------------------
  "markdownlint.config": {
    "MD003": false,
    "MD012": false,
    "MD024": false,
    "MD026": false,
    "MD033": false,
    "MD034": false,
    "MD040": false,
    "MD041": false,
    "MD045": false
  },
  // -------------------------------------
  // REST Client
  // -------------------------------------
  "rest-client.decodeEscapedUnicodeCharacters": true,
  "rest-client.enableTelemetry": false,
  "rest-client.previewResponsePanelTakeFocus": false,
  "rest-client.previewOption": "exchange",
  "rest-client.environmentVariables": {
    "$shared": {
      "togglApiToken": "TOGGL_API_TOKEN"
    },
    "local": {
      "restjcBaseUrl": "REST_JC_DEVELOPMENT_BASE_URL"
    },
    "production": {
      "restjcBaseUrl": "REST_JC_PRODUCTION_BASE_URL",
      "github": "https://api.github.com"
    }
  },
  // -------------------------------------
  // その他
  // -------------------------------------
  "terminal.integrated.rendererType": "dom",
  "explorer.confirmDelete": false,
  "editor.cursorSurroundingLines": 5,
  "editor.formatOnPaste": true,
  "editor.multiCursorModifier": "alt",
  "git.autofetch": true,
  "git.ignoreLegacyWarning": true,
  "go.useLanguageServer": true,
  "C_Cpp.intelliSenseEngine": "Tag Parser",
  "explorer.confirmDragAndDrop": false,
  "git.enableSmartCommit": true,
  "pasteImage.path": "${currentFileDir}/images",
  "python.formatting.provider": "black",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[markdown]": {
    "editor.defaultFormatter": null
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust"
  },
  "hediet.vscode-drawio.local-storage": "",
  "yaml.schemas": {
    "file:///c%3A/Users/tadashi-aikawa/.vscode/extensions/atlassian.atlascode-2.8.5/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },
  "editor.tabSize": 8,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": false,
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "workbench.editor.untitled.hint": "hidden",
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  }
  // "extensions.autoUpdate": false,
}
