{
  // 見た目
  "editor.guides.indentation": false,
  "editor.fontFamily": "CaskaydiaCove Nerd Font",
  "editor.fontSize": 16,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "window.menuBarVisibility": "hidden",
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": true,
  "breadcrumbs.enabled": true,
  "terminal.integrated.fontFamily": "SauceCodePro NF",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": true,
  "diffEditor.renderSideBySide": true,
  // 挙動
  "editor.tabCompletion": "on",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.formatOnSave": true,
  // デフォルトファイル設定
  "files.eol": "\n",
  // ファイルごとの特殊設定
  "[plaintext]": {
    "files.autoGuessEncoding": true
  },
  "[csv]": {
    "files.autoGuessEncoding": true
  },
  "[tsv]": {
    "files.autoGuessEncoding": true
  },
  "[bat]": {
    "files.encoding": "shiftjis"
  },
  "files.associations": {
    "Vagrantfile": "ruby",
    "*.txt": "csv"
  },
  // ターミナル
  "editWithShell.shell.windows": "bash",
  "editWithShell.shellArgs.windows": ["-c"],
  "editWithShell.processEntireTextIfNoneSelected": true,
  // JS/TS
  "eslint.validate": ["javascript", "typescript"],
  // Markdown
  "markdownlint.config": {
    "MD003": false,
    "MD012": false,
    "MD024": false,
    "MD026": false,
    "MD033": false,
    "MD034": false,
    "MD040": false,
    "MD041": false,
    "MD045": false
  },
  // AutoHotkey Plus Plus
  "ahk++.file.executePath": "${env:USERPROFILE}/scoop/apps/autohotkey-installer/current/AutoHotkeyU64.exe",
  // その他
  "terminal.integrated.rendererType": "dom",
  "explorer.confirmDelete": false,
  "editor.cursorSurroundingLines": 5,
  "editor.cursorBlinking": "solid",
  "editor.formatOnPaste": true,
  "editor.multiCursorModifier": "alt",
  "git.autofetch": true,
  "git.ignoreLegacyWarning": true,
  "C_Cpp.intelliSenseEngine": "Tag Parser",
  "explorer.confirmDragAndDrop": false,
  "git.enableSmartCommit": true,
  "pasteImage.path": "${currentFileDir}/images",
  "python.formatting.provider": "black",
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[markdown]": {
    "editor.defaultFormatter": null
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[go]": {
    "editor.defaultFormatter": null,
    "editor.insertSpaces": false
  },
  "editor.tabSize": 4,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "workbench.editor.untitled.hint": "hidden",
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.editor.splitInGroupLayout": "vertical",
  "rust-analyzer.checkOnSave.command": "clippy",
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "svelte.plugin.svelte.note-new-transformation": false,
  "playwright.reuseBrowser": true,
  "svelte.enable-ts-plugin": true,
  "[python]": {
    "editor.formatOnType": true
  },
  "workbench.editor.empty.hint": "hidden",
  // "extensions.autoUpdate": false,
  "jest.autoRun": {
    "watch": false
  }
}
